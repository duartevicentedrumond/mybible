<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.duart.mybible.NewItemBox">

    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/edit_text_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_name" />

    <AutoCompleteTextView
        android:id="@+id/edit_text_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_text_category"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_category" />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_name"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_name"
        tools:layout_editor_absoluteY="29dp" />

    <TextView
        android:id="@+id/text_view_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_category"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_text_category"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_category" />

    <TextView
        android:id="@+id/text_view_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_location"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_text_location"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_location" />

    <AutoCompleteTextView
        android:id="@+id/edit_text_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_text_location"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_location" />

    <TextView
        android:id="@+id/text_view_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_box"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_text_box"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_box" />

    <AutoCompleteTextView
        android:id="@+id/edit_text_consumable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_text_box"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_box" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_consumable"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_text_consumable"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_consumable" />

    <EditText
        android:id="@+id/edit_text_cost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:inputType="numberDecimal|numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_text_consumable"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_consumable" />

    <TextView
        android:id="@+id/text_view_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_cost"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_text_cost"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_cost" />

</android.support.constraint.ConstraintLayout>
