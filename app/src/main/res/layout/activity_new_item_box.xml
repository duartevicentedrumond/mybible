<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.duart.mybible.NewItemBox">

    <EditText
        android:id="@+id/edit_text_item_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/edit_text_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_item_name"
        app:layout_constraintStart_toStartOf="@+id/edit_text_item_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_item_name" />

    <AutoCompleteTextView
        android:id="@+id/edit_text_item_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_text_category"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_category" />

    <AutoCompleteTextView
        android:id="@+id/edit_text_item_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_text_item_location"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_item_location" />

    <AutoCompleteTextView
        android:id="@+id/edit_text_consumable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_text_item_box"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_item_box" />

    <EditText
        android:id="@+id/edit_text_cost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_text_consumable"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_consumable" />

    <ImageView
        android:id="@+id/image_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_item_name"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_item_name"
        app:srcCompat="@drawable/ic_tag" />

    <ImageView
        android:id="@+id/image_view_category"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_category"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_category"
        app:srcCompat="@drawable/ic_category" />

    <ImageView
        android:id="@+id/image_view_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_item_location"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_item_location"
        app:srcCompat="@drawable/ic_location" />

    <ImageView
        android:id="@+id/image_view_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_item_box"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_item_box"
        app:srcCompat="@drawable/ic_box_2" />

    <ImageView
        android:id="@+id/image_view_consumable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_consumable"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_consumable"
        app:srcCompat="@drawable/ic_consumable" />

    <ImageView
        android:id="@+id/image_view_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_cost"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_cost"
        app:srcCompat="@drawable/ic_coins" />

</android.support.constraint.ConstraintLayout>
