<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.duart.mybible.ViewPerson">

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_complete_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="complete name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_name" />

    <ImageView
        android:id="@+id/image_view_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_complete_name"
        app:srcCompat="@drawable/ic_balloons" />

    <TextView
        android:id="@+id/text_view_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="data de nascimento"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_birthday"
        app:layout_constraintStart_toEndOf="@+id/image_view_birthday"
        app:layout_constraintTop_toTopOf="@+id/image_view_birthday" />

    <ImageView
        android:id="@+id/image_view_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_birthday"
        app:srcCompat="@drawable/ic_phone_mobile" />

    <TextView
        android:id="@+id/text_view_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="telemÃ³vel"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_mobile"
        app:layout_constraintStart_toEndOf="@+id/image_view_mobile"
        app:layout_constraintTop_toTopOf="@+id/image_view_mobile" />

    <ImageView
        android:id="@+id/image_view_fix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_mobile"
        app:srcCompat="@drawable/ic_phone_fix" />

    <TextView
        android:id="@+id/text_view_fix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="telefone"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_fix"
        app:layout_constraintStart_toEndOf="@+id/image_view_fix"
        app:layout_constraintTop_toTopOf="@+id/image_view_fix" />

    <ImageView
        android:id="@+id/image_view_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_fix"
        app:srcCompat="@drawable/ic_work" />

    <TextView
        android:id="@+id/text_view_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="telefone trabalho"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_work"
        app:layout_constraintStart_toEndOf="@+id/image_view_work"
        app:layout_constraintTop_toTopOf="@+id/image_view_work" />

    <ImageView
        android:id="@+id/image_view_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_work"
        app:srcCompat="@drawable/ic_email" />

    <TextView
        android:id="@+id/text_view_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="email "
        app:layout_constraintBottom_toBottomOf="@+id/image_view_email"
        app:layout_constraintStart_toEndOf="@+id/image_view_email"
        app:layout_constraintTop_toTopOf="@+id/image_view_email" />

</android.support.constraint.ConstraintLayout>
