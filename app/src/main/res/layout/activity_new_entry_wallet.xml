<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.duart.mybible.NewEntryWallet">

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_date" />

    <Spinner
        android:id="@+id/spinner_repay"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_text_source_destination"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_source_destination" />

    <Spinner
        android:id="@+id/spinner_repayment"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/spinner_repay"
        app:layout_constraintTop_toBottomOf="@+id/spinner_repay" />

    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/spinner_repayment"
        app:layout_constraintTop_toBottomOf="@+id/spinner_repayment" />

    <EditText
        android:id="@+id/edit_text_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_description" />

    <EditText
        android:id="@+id/edit_text_source_destination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_value" />

    <EditText
        android:id="@+id/edit_text_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="yyyy-mm-dd hh:mm:ss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_date"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_text_date"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_date" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_description"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_text_description"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_description" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_value"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_text_value"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_value" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_source_destination"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_text_source_destination"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_source_destination" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_repay"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_repay"
        app:layout_constraintEnd_toStartOf="@+id/spinner_repay"
        app:layout_constraintTop_toTopOf="@+id/spinner_repay" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_repayment"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_repayment"
        app:layout_constraintEnd_toStartOf="@+id/spinner_repayment"
        app:layout_constraintTop_toTopOf="@+id/spinner_repayment" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_view_type"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_type"
        app:layout_constraintEnd_toStartOf="@+id/spinner_type"
        app:layout_constraintTop_toTopOf="@+id/spinner_type" />

</android.support.constraint.ConstraintLayout>
